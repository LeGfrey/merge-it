{% extends 'base.html.twig' %}

{% block body %}
    <h1>MergedFeed</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ mergedFeed.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ mergedFeed.name }}</td>
            </tr>
            <tr>
                <th>Feeds</th>
                <td>
                    <ul>
                        {% for feed in feeds %}
                            <li>{{ feed }}</li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('user_merged_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('user_merged_edit', { 'id': mergedFeed.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
