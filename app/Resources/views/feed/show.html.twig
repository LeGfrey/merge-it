{% extends 'base.html.twig' %}

{% block body %}
    <h1>Feed</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ feed.name }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ feed.url }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('user_feed_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('user_feed_edit', { 'id': feed.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
