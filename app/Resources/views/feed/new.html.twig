{% extends 'base.html.twig' %}

{% block body %}
    <h1>Add a new feed</h1>
    <div class="content clearfix">
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <button class="btn btn-success btn-raised btn-float" type="submit"><i class="material-icons">done</i>Create</button>
        {{ form_end(form) }}

        <a class="btn btn-info btn-raised btn-float" href="{{ path('user_feed_index') }}"><i class="material-icons">keyboard_arrow_left</i>Back to the list</a>
    </div>
{% endblock %}
