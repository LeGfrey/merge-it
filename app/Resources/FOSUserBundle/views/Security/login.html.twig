{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block title %}Please login first{% endblock %}

{% block fos_user_content %}
{% if error %}
    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
	
	<div class="form-group">
	    <label for="username">Username</label>
	    <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
    </div>

	<div class="form-group">
	    <label for="password">Password</label>
	    <input class="form-control" type="password" id="password" name="_password" required="required" />
	</div>

	<div class="form-group">
		<div class="checkbox">
			<label for="remember_me"><input type="checkbox" id="remember_me" name="_remember_me" value="on" /> Remember me</label>
		</div>
    </div>
    <input class="btn btn-success btn-raised" type="submit" id="_submit" name="_submit" value="Login" />
</form>
{% endblock fos_user_content %}
