{% extends 'base.html.twig' %}

{% block body %}
    <h1>Edit a merged feed</h1>
    <div class="content">
        {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}
        <button class="btn btn-success btn-raised btn-float" type="submit"><i class="material-icons">done</i>Edit</button>
        {{ form_end(edit_form) }}

        <a class="btn btn-info btn-raised btn-float" href="{{ path('user_merged_index') }}"><i class="material-icons">keyboard_arrow_left</i>Back to the list</a>
        {{ form_start(delete_form) }}
        <button class="btn btn-danger btn-raised" type="submit"><i class="material-icons">delete</i>Delete</button>
        {{ form_end(delete_form) }}
    </div>
{% endblock %}
